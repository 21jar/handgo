<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stackfing.admin.mapper.UserMapper">

    <!--根据id查用户-->
    <select id="selectUserById" resultType="com.stackfing.pojo.User">
        SELECT user.uid
         ,user.account
         ,user.password
         ,user.email
         ,user.createDate
         ,user.headPhoto
         ,user.lastLogin
         ,user.permission
         ,user.phoneNumber
         ,user.status
          FROM user WHERE uid = #{uid}
    </select>

    <!--根据账号名查用户-->
    <select id="selectUserByAccount" resultType="com.stackfing.pojo.User">
      SELECT user.uid
         ,user.account
         ,user.password
         ,user.email
         ,user.createDate
         ,user.headPhoto
         ,user.lastLogin
         ,user.permission
         ,user.phoneNumber
         ,user.status FROM user WHERE account = #{account}
    </select>

    <!--获得所有用户-->
    <select id="findAll" resultType="com.stackfing.pojo.User">
        SELECT user.uid
         ,user.account
         ,user.password
         ,user.email
         ,user.createDate
         ,user.headPhoto
         ,user.lastLogin
         ,user.permission
         ,user.phoneNumber
         ,user.status FROM handgo.user
    </select>

    <!--根据id删除用户-->
    <delete id="deleteUserById" parameterType="long">
        DELETE FROM handgo.user WHERE uid = #{uid}
    </delete>

    <insert id="insertUser" parameterType="com.stackfing.pojo.User">
        INSERT INTO handgo.user(account,
        password,
        email,
        createDate,
        headPhoto,
        lastLogin,
        permission,
        phoneNumber,
        status) VALUES (#{account},#{password},#{email},#{createDate},#{headPhoto},#{lastLogin},#{permission},#{phoneNumber},#{status})

    </insert>

    <!--分页查询用户-->
    <select id="selectAllUserByPage" resultType="com.stackfing.pojo.User">
        SELECT user.uid
         ,user.account
         ,user.password
         ,user.email
         ,user.createDate
         ,user.headPhoto
         ,user.lastLogin
         ,user.permission
         ,user.phoneNumber
         ,user.status FROM handgo.user LIMIT #{offSize},#{length}
    </select>

    <select id="selectAllDeletedUserByPage" resultType="com.stackfing.pojo.User">
        SELECT user.uid
        ,user.account
        ,user.password
        ,user.email
        ,user.createDate
        ,user.headPhoto
        ,user.lastLogin
        ,user.permission
        ,user.phoneNumber
        ,user.isDeleted
        ,user.status FROM handgo.user WHERE user.isDeleted = 1 LIMIT #{offSize},#{length}
    </select>
    
    <update id="updateUser" parameterType="com.stackfing.pojo.User">
        UPDATE user SET account=#{account},password=#{password},email=#{email},createDate=#{createDate},headPhoto=#{headPhoto},lastLogin=#{lastLogin},
        permission=#{permission},phoneNumber=#{phoneNumber},status=#{status} WHERE user.uid=#{uid}
    </update>

    <select id="getUserCount" resultType="long">
        SELECT count(uid) FROM user;
    </select>
    
</mapper>
